        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AadhaarNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RationCardNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Things)
        </td>
        <td>
            @Html.ActionLink("Add", "ConsumerStockUpdate", new { id=item.Id }, new { style = "text-decoration:none;" }) 
        </td>
    </tr>
}

</table>


