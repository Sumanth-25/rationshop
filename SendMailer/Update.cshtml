    }

    input {
        display: block;
        height: 20px;
        width: 60%;
        background-color: white;
        font-family: 'Poppins',sans-serif;
        border-radius: 3px;
        padding: 10px 50px;
        margin-top: 8px;
        font-size: 20px;
        font-weight: 500;
        border-width: 5px;
        border-style: inset;
        border-color: rgba(69, 93, 226, 0.8);
