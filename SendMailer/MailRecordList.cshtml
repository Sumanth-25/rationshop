@model IEnumerable<DomesticShop.Models.MailRecord>

@{
    ViewBag.Title = "MailRecordList";
}

<h2>Mail Record List</h2>

<p class="link">
    @Html.ActionLink("Dashborad", "Index", null, new { style = "color:white;text-decoration:none;" })
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentDate)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentDate)
            </td>
        </tr>
    }

</table>

<style>
    h2 {
        height: 60px;
        background: #f5f5f5;
        color: MediumBlue;
        font-family: 'Poppins',sans-serif;
        font-size: 35px;
        text-align: center;
        font-weight: bold;
    }

    .link {
        position: absolute;
        right: 60px;
        top: 90px;
        border: solid;
        color: white;
        background-color: SlateBlue;
        font-family: 'Poppins',sans-serif;
        padding: 10px 50px;
        text-align: center;
        font-size: 16px;
        height: 20px;
        font-weight: 700;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
        position: absolute;
        border-radius: 10px;
    }

        .link:hover {
            color: white;
            font-size: 15px;
            border-radius: 50px;
        }

    table {
        font-family: arial, sans-serif;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 20px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    td:hover {
        background-color: #ddd;
    }

    h2 {
        text-align: center
    }
</style>
